<!-- Header -->
<header>
    <div class="jumbotron jumbotron-fluid" id="main-header">
    <div class="row">
        <div class="col-md-4 col-12">
            <div class="container">
                <img src="/public/assets/img/burger.jpg" alt="burger-image">
            </div>
        </div>
        <div class="col-md-8 col-12">
            <div class="container">
                <h1 class="display-4">Eat-Da-Burger</h1>
                <p class="lead">An app that let's you virtually devour the burgers you'd like to eat.</p>
            </div>
        </div>
    </div>
    </div>  
</header>

<!-- Form to enter burger choice -->
<section>
    <div class="container" id="burger-entry">
        <h3>What burger would you like to eat today?</h3>
        <form>
            <div class="form-group">
                <label for="burger-name">Burger Name:</label>
                <input type="text" class="form-control" id="burger-name">
            </div>
            <button type="submit" class="btn btn-danger">Submit</button>
        </form>
    </div>
</section>

<div class="container">
    <div class="row">

        <!-- About to be devoured -->
        <div class="col-md-6 col-12 left-col">
            <div class="card" style="width: 20rem;">
            <div class="card-body">
                <h5 class="card-title">Burgers you can eat:</h5>
            </div>
            <ul class="list-group list-group-flush">
                {{#each burgers}}
                    {{#unless devoured}}
                    {{burger_name}}
                    <button type="button" class="btn btn-warning" id ="devourBtn" data-id="{{id}}" data-newDevour="{{devoured}}"></button>
                    {{/unless}}
                {{/each}}
            </ul>
            </div>
        </div>

        <!-- Already been devoured -->
        <div class="col-md-6 col-12 right-col">
            <div class="card" style="width: 20rem;">
            <div class="card-body">
                <h5 class="card-title">Burgers you've eaten:</h5>
            </div>
            <ul class="list-group list-group-flush">
                {{#each burgers}}
                    {{#if devoured}}
                    {{burger_name}}
                    {{/if}}
                {{/each}}
            </ul>
            </div>
        </div>

    </div>
</div>