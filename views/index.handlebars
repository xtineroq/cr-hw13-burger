<!-- Header -->
<header>
    <div class="jumbotron jumbotron-fluid" id="main-header">
    <div class="row justify-content-center">
        <div class="col-md-6 col-12 header-bg">
            <h1 class="display-4">Eat-Da-Burger</h1>
            <p class="lead">An app that let's you virtually devour the burgers you'd like to eat.</p>
        </div>
    </div>
    </div>  
</header>

<!-- Form to enter burger choice -->
<section id="b-entry-cont">
    <div class="col-md-6 col-12" id="burger-entry">
        <h3>What burger would you like to eat today?</h3>
        <form class="create-form">
            <div class="form-group">
                <input type="text" class="form-control" id="burger-name">
            </div>
            <button type="submit" class="btn btn-danger">Submit</button>
        </form>
    </div>
</section>

<div class="container">
    <div class="row justify-content-center">

        <!-- About to be devoured -->
        <div class="col-md-5 col-12 left-col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Burgers you can eat:</h5>
                </div>
                <ul class="list-group list-group-flush">
                    {{#each burgers}}
                        {{#unless devoured}}
                        <li class="list-group-item justify-content-between">
                            {{burger_name}}
                            <button type="button" class="btn btn-warning" id ="devourBtn" data-id="{{id}}" data-newdevour="{{devoured}}">
                                Devour it!
                            </button>
                        </li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>

        <!-- Already been devoured -->
        <div class="col-md-5 col-12 right-col">
            <div class="card">
            <div class="card-body">
                <h5 class="card-title">Burgers you've eaten:</h5>
            </div>
            <ul class="list-group list-group-flush">
                {{#each burgers}}
                    {{#if devoured}}
                    <li class="list-group-item justify-content-between">
                        {{burger_name}}
                    </li>
                    {{/if}}
                {{/each}}
            </ul>
            </div>
        </div>

    </div>
</div>